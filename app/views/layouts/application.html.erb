<!DOCTYPE html>
<html>
  <head>
    <title>TrackYourTV</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name='viewport' content='width=device-width, initial-scale=1.0' >
    <meta name="turbolinks-cache-control" content="no-cache">
  </head>

  <body>
    <noscript>
      <div style="border: 1px solid; padding: 10px">
        To use this website you'll need to enable JavaScript in your web browser.
      </div>
    </noscript>

    <% if user_signed_in? %>
      <%= render 'layouts/header_logged_in' %>
    <% else %>
      <%= render 'layouts/header_logged_out' %>
    <% end %>

    <% if current_page?(welcome_path) %>
      <%= yield %>
    <% else %>
      <div class="page-filler">
        <%= yield %>
      </div>
    <% end %>
    <%= render 'layouts/footer' %>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-90414836-1', 'auto');
      ga('send', 'pageview');
    </script>
  </body>
</html>
