<nav class="navbar-custom navbar" id="logged-out-navbar">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle pull-left collapsed"
              data-toggle="collapse" data-target="#navbar"
              aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'TV Tracker', root_path, class: "navbar-brand" %>
    </div>
    <div id="navbar" class="navbar-collapse collapse"
          aria-expanded="false" style="height: 1px;">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if current_page?(welcome_path) %>
            <a href="javascript:void(0);" onclick="AuthActions.showSignUpModal()" class="sign-up-link" title="Sign Up">
          <% else %>
            <a href="/sign_up" class="sign-up-link" title="Sign Up">
          <% end %>
            Sign Up
          </a>
        </li>
        <li>
          <% if current_page?(welcome_path) %>
            <a href="javascript:void(0);" onclick="AuthActions.showLoginModal()" class="login-link" title="Login">
          <% else %>
            <a href="/login" class="login-link" title="Login">
          <% end %>
            Log In
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<div class="header-filler"></div>
<% if current_page?(welcome_path) %>
  <p class="alert hidden"><%= notice %><%= alert %></p>
<% else %>
  <% if notice %>
    <p class="alert alert-success alert-custom"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger alert-custom"><%= alert %></p>
  <% end %>
<% end %>

<%= react_component('AuthPickerContainer') %>

<script>
$(document).ready(function() {
  $('#logged-out-navbar').css('background-color', 'rgba(38, 38, 38, 1.0)');
  $(window).scroll(function() {
    if ($(this).scrollTop() > 50) {
      $('#logged-out-navbar').css('background-color', 'rgba(38, 38, 38, 0.8)');
    } else {
      $('#logged-out-navbar').css('background-color', 'rgba(38, 38, 38, 1.0)');
    }
  })
});
</script>
